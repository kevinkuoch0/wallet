<!DOCTYPE html>
<html>
	<head>
	  <title>Mywallet</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>

	<body>
		<div id="flash">
			<%= flash[:notice] if flash[:notice] %>
		</div>

		<div id="alert">
			<%= flash[:alert] if flash[:alert] %>
		</div>

		<div id="container">
			<header>
				<div id="title">
					<h3>Wallet App</h3>
				</div>

			</header>

			<div id="content">
				<%= yield %>
			</div>

			<footer>
				<p> Kevin Kuoch Wallet App Footer
			</footer>
		</div>
	</body>
</html>
